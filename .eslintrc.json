{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["plugin:prettier/recommended", "prettier"],
  "rules": {
    "indent": ["error", 4],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "linebreak-style": ["error", "windows"],
    "no-console": "off",
    "no-var": "error",
    "no-multi-spaces": "error",
    "space-in-parens": "error",
    "no-multiple-empty-lines": "error",
    "prefer-const": "error",
    "no-use-before-define": "error"
  }
}
